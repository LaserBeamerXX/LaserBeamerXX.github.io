name: Build and Deploy

on:
  push:
    branches:
      - main # Replace with the branch you want to trigger the workflow on

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Build the site
      run: npm install && npm run build
      working-directory: ./ # Assuming your project's root contains your website code

    - name: Deploy to GitHub Pages
      uses: peaceiris/actions-gh-pages@v3
      with:
        deploy_key: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: ./public # Adjust this path to match your output directory
